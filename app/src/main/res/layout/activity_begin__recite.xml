<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Word_recite.Begin_Recite"
    android:background="@drawable/skyblue22">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/show_word"
        android:id="@+id/select_tf"
        android:visibility="invisible"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:layout_centerVertical="true"
            android:id="@+id/goback"
            android:layout_marginLeft="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/icon_back"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/show_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Count"
        android:textColor="#000000"
        android:textSize="50sp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="260dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:padding="6dp"
                android:id="@+id/btn1"
                android:text="计数"
                android:layout_margin="5dp"
                android:background="@drawable/cebian_menu"
                android:textSize="15sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:padding="6dp"
                android:id="@+id/btn2"
                android:text="康特"
                android:layout_margin="5dp"
                android:background="@drawable/cebian_menu"
                android:textSize="15sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:padding="6dp"
                android:id="@+id/btn3"
                android:text="我好"
                android:layout_margin="5dp"
                android:textSize="15sp"
                android:layout_width="0dp"
                android:background="@drawable/cebian_menu"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:padding="6dp"
                android:id="@+id/btn4"
                android:text="你好"
                android:layout_margin="5dp"
                android:background="@drawable/cebian_menu"
                android:textSize="15sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_pre"
            android:text="上一个"
            android:layout_margin="5dp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_fabiao"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/shoucang"
            android:text="收藏"
            android:layout_margin="5dp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_xiadan"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btn_next"
            android:text="下一个"
            android:layout_margin="5dp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_fabiao"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>