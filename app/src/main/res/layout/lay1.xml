<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:background="@drawable/message_line1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/btn3">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:background="@drawable/chatt" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="   易学学习交流室"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:background="#C2FFFFFF"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="italic" />
        </LinearLayout>
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <Button
                android:id="@+id/zhankai"
                android:layout_toLeftOf="@id/zhankai_icon"
                android:layout_width="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="#00ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="我加入的"
                android:textColor="@android:color/widget_edittext_dark"
                android:textSize="13sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/zhankai_icon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/zhankai" />
        </RelativeLayout>
        <RelativeLayout
            android:background="#ffffff"
            android:id="@+id/rel_java"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/qun_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/qun_logo" />

            <Button
                android:layout_toRightOf="@id/qun_logo"
                android:id="@+id/qun_btn1"
                android:background="#00ffffff"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="学习方法分享群"
                android:gravity="left"
                android:textSize="16sp"/>

            <View
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/red_circle"/>
            <Button
                android:layout_toRightOf="@id/qun_logo"
                android:id="@+id/qun_btn2"
                android:gravity="left"
                android:background="#00ffffff"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="35dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="李光亚：这个方法很不错"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/btn4"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="60dp"
                    android:text=""
                    android:textSize="15sp"
                    android:textStyle="italic" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="12sp"
        android:textColor="@android:color/secondary_text_light"
        android:text="\n\n\n这是一个在线交流室，你可以在这里面不限人数的实时畅言。"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="12sp"
        android:textColor="@android:color/secondary_text_light"
        android:text="If you have any questions,ask through this funtion.\n\n\n\n\n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>