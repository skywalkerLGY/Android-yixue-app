<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/skyblue22"
    android:padding="5dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="上门取件服务员"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:layout_margin="8dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#000000"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <ImageView
            android:id="@+id/meeting_img_dialog"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/pengyuyan"
            android:transitionName="details"
            android:layout_marginEnd="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/meeting_img_dialog"
            android:layout_toRightOf="@id/meeting_img_dialog"
            android:orientation="vertical">


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="姓名:小李"
                android:textSize="18sp"
                android:layout_margin="1dp"/>

            <TextView
                android:id="@+id/phone"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="电话:12431700819"
                android:textSize="18sp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/haoplv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="好评率:99.87%"
                android:textSize="18sp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#000000"/>

    <ImageView
        android:id="@+id/qishoujuli"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/qishou25"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:id="@+id/cancel_dialog"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:textColor="@android:color/white"
            android:text="取消"
            android:textStyle="italic"
            android:textSize="16sp" />
        <Button
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:id="@+id/change"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:textColor="@android:color/white"
            android:textStyle="italic"
            android:text="换一位"
            android:textSize="16sp" />
        <Button
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/join_dialog"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:textColor="@android:color/white"
            android:textStyle="italic"
            android:text="确定"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>