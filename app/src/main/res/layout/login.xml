<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="370dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="400dp"
            android:layout_height="195dp"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/login_phone"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="#00ffffff"
                    android:hint="*手机号码"
                    android:paddingLeft="15dp"
                    android:textColor="@color/login_color"
                    android:textColorHint="@color/gray"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/pyq_user_back"
                    android:layout_width="220dp"
                    android:layout_height="1dp"
                    android:layout_below="@id/login_phone"
                    android:background="@color/login_color" />

                <LinearLayout
                    android:id="@+id/line_gone_pass"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/pyq_user_back"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/login_password"
                        android:layout_width="195dp"
                        android:layout_height="40dp"
                        android:background="#00ffffff"
                        android:hint="*密码"
                        android:inputType="textPassword"
                        android:paddingLeft="15dp"
                        android:textColor="@color/login_color"
                        android:textColorHint="@color/gray"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/view_pass"
                        android:layout_width="20dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/hide_pass" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_gone"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/pyq_user_back"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/login_yzm"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="#00ffffff"
                        android:hint="*短信验证码"
                        android:paddingLeft="15dp"
                        android:textColor="@color/login_color"
                        android:textColorHint="@color/gray"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/Huoqu"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/button"
                        android:text="获取验证码"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <View
                    android:id="@+id/view2"
                    android:layout_width="220dp"
                    android:layout_height="1dp"
                    android:background="@color/login_color" />

                <Button
                    android:id="@+id/yzm_btn"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/view2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="#00ffffff"
                    android:text="验证码登录"
                    android:textColor="@color/login_color"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/password_btn"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/view2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="#00ffffff"
                    android:text="密 码 登 录"
                    android:textColor="@color/login_color"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/remember"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="#00ffffff"
                        android:text="记住密码"
                        android:textColor="@color/login_color"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/forget_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="#00ffffff"
                        android:text="找回密码"
                        android:textColor="@color/login_color"
                        android:textSize="15sp" />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_face"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_above="@id/btn_login"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:text="扫脸登录"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/zhuce_login"
            android:text="登 录"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </RelativeLayout>
</LinearLayout>
