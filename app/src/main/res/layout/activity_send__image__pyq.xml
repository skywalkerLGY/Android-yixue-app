<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Find.Send_Image_Pyq">
    <RelativeLayout
        android:id="@+id/rel0"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:layout_marginLeft="0dp"
            android:id="@+id/goback"
            android:layout_centerVertical="true"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:background="@drawable/go_back"/>
        <TextView
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/goback"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="发布文字+图片"
            android:layout_marginLeft="20dp"/>
        <Button
            android:id="@+id/send"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="发表"
            android:textColor="@android:color/white"
            android:background="@drawable/button_fabiao"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_below="@id/rel0"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="#ffffff">
        <EditText
            android:layout_above="@id/send_image"
            android:id="@+id/send_text"
            android:background="#ffffff"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="top"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="这一刻的想法..."/>
        <ImageView
            android:id="@+id/send_image"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/tianjia_image"
            android:layout_alignParentBottom="true"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
    </RelativeLayout>
    <View
        android:layout_below="@id/rel1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B1B1B1"/>
    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/rel1"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/image1"
            android:layout_width="28dp"
            android:layout_height="30dp"
            android:background="@drawable/location"/>
        <TextView
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="所在位置"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/go_image"/>
    </RelativeLayout>
    <View
        android:layout_below="@id/rel2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B1B1B1"/>
    <RelativeLayout
        android:id="@+id/rel3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/rel2"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/image2"
            android:layout_width="28dp"
            android:layout_height="30dp"
            android:background="@drawable/at"/>
        <TextView
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提醒谁看"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/go_image"/>
    </RelativeLayout>
    <View
        android:layout_below="@id/rel3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B1B1B1"/>
    <RelativeLayout
        android:id="@+id/rel4"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/rel3"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/image3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/time_logo"/>
        <TextView
            android:paddingLeft="12dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发布时间:"/>
        <EditText
            android:id="@+id/send_time"
            android:background="#00ffffff"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:paddingLeft="12dp"
            android:textSize="12sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020.12.19日20:15"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/go_image"/>
    </RelativeLayout>
    <View
        android:layout_below="@id/rel4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B1B1B1"/>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/rel4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#C1C1C1"
        android:text="你可以在这里发送一条带图片的朋友圈，选择您的发布时间"/>
</RelativeLayout>