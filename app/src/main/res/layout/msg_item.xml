<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp">

    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left">

        <ImageView
            android:id="@+id/receive_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="top"
            android:layout_marginTop="15dp"
            android:background="@drawable/receive_image" />

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/receive_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="#00FFFFFF"
                android:paddingLeft="0dp"
                android:text="李光亚"
                android:textColor="#ffffff"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/receive_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/receive_name"
                android:background="#00FFFFFF"
                android:paddingLeft="0dp"
                android:text="2021.10.23"
                android:textColor="#ffffff"
                android:textSize="5sp" />


            <TextView
                android:id="@+id/left_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/receive_name"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/the_left_dialog"
                android:gravity="left"
                android:paddingLeft="7dp"
                android:paddingTop="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="6dp"
                android:text="我是李光亚"
                android:textColor="#252525"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/left_dialog"
                android:layout_width="87dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/tanchu_btn"
                android:orientation="horizontal"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingBottom="5dp"
                android:visibility="invisible">

                <Button
                    android:id="@+id/btn_delete1"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:background="#00ffffff"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_high_color1"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:background="#00ffffff"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="标记"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/send_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="#00FFFFFF"
                android:paddingRight="0dp"
                android:text="龚靖尧"
                android:textColor="#ffffff"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/send_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="left"
                android:layout_marginRight="5dp"
                android:layout_marginTop="12dp"
                android:layout_toLeftOf="@id/send_name"
                android:background="#00FFFFFF"
                android:paddingLeft="0dp"
                android:text="2021.10.23"
                android:textColor="#ffffff"
                android:textSize="5sp" />

            <TextView
                android:id="@+id/right_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/send_name"
                android:layout_alignParentRight="true"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/the_right_dialog"
                android:gravity="left"
                android:paddingLeft="7dp"
                android:paddingTop="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="6dp"
                android:text="我是李小亚"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/right_dialog"
                android:layout_width="87dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="9dp"
                android:background="@drawable/tanchu_btn"
                android:orientation="horizontal"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingBottom="5dp"
                android:visibility="invisible">

                <Button
                    android:id="@+id/btn_delete2"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:background="#00ffffff"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_high_color2"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:background="#00ffffff"
                    android:text="标记"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/send_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="top"
            android:layout_marginTop="15dp"
            android:background="@drawable/send_image" />


    </LinearLayout>
</LinearLayout>