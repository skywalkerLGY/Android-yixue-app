<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    tools:context=".LXR_More">

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/goback"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="20dp"
            android:background="@drawable/icon_back" />

        <Button
            android:id="@+id/share_erweima"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:background="@drawable/erweima_logo" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/rel1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/lxr_rel_back">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="李光亚"
            android:textColor="#000000"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/sex"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/name" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="60dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/shoucang" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/dianhua_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/dianhua_icon" />

            <Button
                android:id="@+id/duanxin_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/duanxin_icon" />
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:src="@drawable/tv3"
        android:id="@+id/user_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/rel2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-210dp" />

    <RelativeLayout
        android:id="@+id/rel3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/lxr_rel_back">

        <RelativeLayout
            android:id="@+id/rel21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="" />

            <Button
                android:id="@+id/btn_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/tvtv"
                android:background="#00ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="13771973655" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:background="@drawable/dianhua" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel21"
            android:padding="5dp">

            <TextView
                android:id="@+id/qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="" />

            <Button
                android:id="@+id/btn_qq"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/qq"
                android:background="#00ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="1469199086" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:background="@drawable/qq_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel22"
            android:padding="5dp">

            <TextView
                android:id="@+id/school_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="他的学号:3030184109"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/rel3"
        android:layout_margin="15dp"
        android:background="@drawable/lxr_rel_back">

        <Button
            android:id="@+id/btn_liuyan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:background="#00ffffff"
            android:text="给他留言"
            android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>