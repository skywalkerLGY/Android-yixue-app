<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_slid"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".Lock.LockScreenActivity">

    <TextView
        android:id="@+id/dian"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70sp"
        android:textColor="@android:color/white"
        android:text="21:21"/>
    <TextView
        android:id="@+id/riqi"
        android:layout_below="@id/dian"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="12月26日"/>
    <TextView
        android:id="@+id/tishi"
        android:layout_marginTop="50dp"
        android:layout_below="@id/riqi"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="易学教育-今日单词"/>
    <TextView
        android:id="@+id/the1"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tishi"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#FFEB3B"
        android:text="eliminate:排除，剔除"/>
    <TextView
        android:id="@+id/the2"
        android:layout_marginTop="20dp"
        android:layout_below="@id/the1"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#FF9800"
        android:text="cognitive:认知的，感知的"/>
    <TextView
        android:id="@+id/the3"
        android:layout_marginTop="20dp"
        android:layout_below="@id/the2"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#E91E63"
        android:text="reveal:显示，透露"/>
    <TextView
        android:id="@+id/the4"
        android:layout_marginTop="20dp"
        android:layout_below="@id/the3"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#00BCD4"
        android:text="cancel:取消，关闭"/>
    <TextView
        android:id="@+id/the5"
        android:layout_marginTop="20dp"
        android:layout_below="@id/the4"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#FF5722"
        android:text="vigorous:活力的，强壮的"/>
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="150dp"
        android:src="@drawable/title_logo"
        android:layout_height="150dp"/>

    <com.example.curriculum_design.Lock.SlideRightViewDragHelper
        android:id="@+id/jiesuo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="130dp"
        android:layout_below="@id/the5"
        android:layout_marginLeft="30dp">

        <LinearLayout
            android:id="@+id/get_order_ll_slide"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/jiesuo_back"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/jiesuo"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="滑动"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

    </com.example.curriculum_design.Lock.SlideRightViewDragHelper>
</RelativeLayout>