<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="radio_style">
        <item name="android:paddingTop">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="AnimScale" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>
    <style name="chat_Scale" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/chat_in</item>
        <item name="android:windowExitAnimation">@anim/chat_out</item>
    </style>
    <style name="lxr_dialog" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/lxr_in</item>
        <item name="android:windowExitAnimation">@anim/lxr_out</item>
    </style>
    <style name="about_dialog" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/about_in</item>
        <item name="android:windowExitAnimation">@anim/about_out</item>
    </style>

    <style name="canting_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>
    <style name="dialog_scale" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>
</resources>